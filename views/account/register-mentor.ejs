<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Custom Css -->
    <link rel="stylesheet" type="text/css" href="/public/css/create-account.css">
    <%- include('../template/head'); %>
</head>

<body>
    <nav class="navbar navbar-static-top navbar-dark bg-inverse">
        <a class="navbar-brand" href="#">OJT Evaluator</a>
        <ul class="nav navbar-nav">
            <li class="nav-item active">
                <a class="nav-link" href="/account/welcome-mentee">Home
                    <span class="sr-only">(current)</span>
                </a>
            </li>
        </ul>
        <ul class="nav navbar-nav pull-right">
            <li class="nav-item">
                <a class="nav-link " href="/account/logout">Logout</a>
            </li>
        </ul>
    </nav>
    <div class="container">
        <div class="row main">
            <div class="panel-heading">
                <div class="panel-title text-center">
                    <h1 class="title">Register a mentor</h1>
                    <hr/>
                </div>
            </div>
            <div class="main-login main-center">
                <form class="form-horizontal"
                      method="post"
                      action="/account/register-mentor"
                      id="formRegisterMentor">
                    <div class="form-group">
                        <label for="selectMentorId"
                               class="cols-sm-2 control-label">
                            Mentor Name
                        </label>
                        <div class="cols-sm-10">
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="fa fa-users fa" aria-hidden="true"></i>
                                </span>
                                <select id="selectMentorId"
                                        class="form-control"
                                        name="selectMentorId">
                                    <% availableMentors.forEach(function(mentor) { %>
                                        <option value= <%= mentor.id%> >
                                            <%= mentor.first_name%> <%= mentor.last_name%>
                                        </option>
                                    <% }); %>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="form-group ">
                        <button type="submit"
                                id="btnRegisterMentor"
                                class="btn btn-primary btn-lg btn-block login-button">
                            Save
                        </button>
                    </div>
                    <hr>
                    <div class="" id="errorMsg"></div>
                </form>
            </div>
            <hr>
            <%- include('../template/footer'); %>
        </div>
    </div> <!-- /container -->
</body>

</html>